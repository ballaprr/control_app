# Production Environment Variables for Django Backend
# Copy this to backend/control_app/.env and replace with your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here
ALLOWED_HOSTS=your-ec2-public-ip,your-domain.com,localhost,127.0.0.1

# Database (you can use SQLite for simple deployments or configure PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# CORS settings for production
CORS_ALLOWED_ORIGINS=http://your-ec2-public-ip,https://your-domain.com
CORS_ALLOW_CREDENTIALS=True

# Info Beamer API
API_KEY=your-actual-info-beamer-api-key-here

# AWS Settings (if using)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# Security Headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Optional: If using HTTPS
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

